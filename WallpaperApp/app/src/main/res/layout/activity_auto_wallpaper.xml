<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/AppThemeNoActionBar"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AutoWallpaperActivity">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView

        android:layout_width="0dp"
        android:layout_weight="5"
        android:textSize="22sp"

        android:text="Auto Wallpaper"
        android:padding="10sp"
        android:textColor="#ffffffff"

        android:layout_height="60sp"
        />

        <Button
            android:id="@+id/setAutoWallpaper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="SET"
            android:textSize="24sp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:padding="10sp"
                    android:text="Pick Category"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/saveCategory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffeeeeee"
                    android:text="Save"
                    android:textSize="24sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/CBall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="ALL"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/CBabstract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="ABSTRACT"
                android:textSize="18sp" />


            <CheckBox
                android:id="@+id/CBflowers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="FLOWERS"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/CBnature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="NATURE"
                android:textSize="18sp" />


            <CheckBox
                android:id="@+id/CBtexture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="TEXTURE"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/CBquotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="QUOTES"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:padding="10sp"
                    android:text="Set Frequency"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/saveTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffeeeeee"
                    android:text="Save"
                    android:textSize="24sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/time24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="24 Hours"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/time12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="12 Hours"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/time8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="8 Hours"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/time4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="4 Hours"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="2 Hours"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="1 Hour"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/time30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="30 Minutes"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:padding="10sp"
                    android:text="Set Screen"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/saveScreen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffeeeeee"
                    android:text="Save"
                    android:textSize="24sp" />
            </LinearLayout>


            <CheckBox
                android:id="@+id/Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="Home Screen"
                android:textSize="18sp" />


            <CheckBox
                android:id="@+id/Lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="Lock Screen"
                android:textSize="18sp" />


            <CheckBox
                android:id="@+id/Both"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:padding="10sp"
                android:text="Both"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>